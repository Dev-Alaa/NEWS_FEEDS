<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="lato_bold_16" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black_900</item>
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="lato_normal_16" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/lato_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineSpacingExtra">0dp</item>
    </style>

    <style name="Widget.NewsApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/Widget.NewsApp.Button.Text</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="background">@drawable/bg_toolbar_background</item>
        <item name="android:paddingTop">@dimen/d_15</item>
        <item name="android:paddingBottom">@dimen/d_15</item>
    </style>

    <style name="Widget.NewsApp.Button.Text">
        <item name="android:textSize">@dimen/text_18</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>